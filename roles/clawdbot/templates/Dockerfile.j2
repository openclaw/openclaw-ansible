FROM node:22-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install pnpm and clawdbot globally
RUN npm install -g pnpm && \
    pnpm add -g clawdbot@latest

# Create user and directories
RUN useradd -m -s /bin/bash clawdbot && \
    mkdir -p /home/clawdbot/.clawdbot/sessions /home/clawdbot/.clawdbot/credentials && \
    chown -R clawdbot:clawdbot /home/clawdbot/.clawdbot

# Switch to clawdbot user
USER clawdbot
WORKDIR /home/clawdbot

# Expose default port (only accessible via localhost binding)
EXPOSE {{ clawdbot_port }}

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD clawdbot --version || exit 1

# Keep container running (clawdbot needs to be started manually or via entrypoint)
CMD ["sh", "-c", "while true; do sleep 3600; done"]
